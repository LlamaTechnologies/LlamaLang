{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "MSVS build active file",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/EHsc",
          "/Fe:",
          "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
          "${file}",
          "/link",
          "/libpath:${workspaceFolder}\\lib",
          "antlr4-runtime.lib"
        ],
        "problemMatcher": [
          "$msCompile"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
}